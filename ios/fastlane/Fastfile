# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do

  ############################## PRELANE ##############################

  before_all do
    setup_circle_ci

  desc "Push a new release build to the App Store"
  lane :release do
    build_app(workspace: "water-consumption-app-rp.xcworkspace", scheme: "water-consumption-app-rp")
    upload_to_app_store
  end
end
